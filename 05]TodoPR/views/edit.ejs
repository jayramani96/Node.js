<form action="/updateData" method="post">
    <input type="text" hidden name="id" value="<%=data.id%>">
    <input type="text" placeholder="Enter Your Task" value="<%=data.task%>" name="task">
    <input type="text" placeholder="Enter Description" value="<%=data.description%>" name="description">
    <button type="submit">Update</button>
</form>