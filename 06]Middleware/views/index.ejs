<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/index.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center">To Do List</h1>

        <div class="card">
            <div class="card-body">
                <form action="/addData" method="post" class="form-inline justify-content-center mb-4">
                    <input type="text" class="form-control mr-2" placeholder="Enter Your Task" name="task">
                    <input type="text" class="form-control mr-2" placeholder="Enter Description" name="description">
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div><br/>

        <div class="list-group">
            <% people.map((e) => { %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h2><%= e.task %></h2>
                        <p><%= e.description %></p>
                    </div>
                    <div>
                        <a href="/editData/<%=e.id%>" class="btn btn-warning btn-sm mr-2">Edit</a>
                        <a href="/deleteData?id=<%=e.id%>" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.4.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
